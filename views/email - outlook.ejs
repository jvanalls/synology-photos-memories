            -webkit-object-fit: cover;
            object-fit: cover;
            height: 100%;
            min-width: 100%;
            vertical-align: middle;
            border-radius: var(--round-corner-image);
        } 
        .image-gallery::after {
            content: "";
            flex-grow: 999;
        }
        @media screen and (max-width: 576px) {
            :root {
                --height-image : 100px;
            }
            .image-gallery {
                gap: 5px !important;
